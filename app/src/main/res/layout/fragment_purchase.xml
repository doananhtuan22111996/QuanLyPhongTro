<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context="com.example.anhtuan.quanlyphongtro.purchase.PurchaseFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/color_backgroud"
        android:gravity="center"
        android:text="@string/timtro"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <ProgressBar
        android:id="@+id/pb_waitpurchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_list_purchase"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
